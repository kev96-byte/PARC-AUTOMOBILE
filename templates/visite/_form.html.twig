{# templates/visite/visite_form.html.twig #}

{# Inclusion du fichier JavaScript de validation #}
<script src="{{ asset('js/validation.js') }}"></script>

{# Formulaire Symfony pour VisiteType #}
{{ form_start(form) }}

<div style="position: relative;">
    {{ form_row(form.vehiculeId) }}
    {{ form_row(form.dateDebutVisite) }}
    {{ form_row(form.dateFinVisite) }}
    {% block form_row %}
    <div class="form-group">
        {{ form_label(form.pieceVisite) }}
        <div class="input-group">
            {{ form_widget(form.pieceVisite, {'attr': {'class': 'form-control'}}) }}
            <div class="input-group-append">
                {% if visite.pieceVisite is defined and visite.pieceVisite is not empty %}
                    <a id="current-piece-link" href="{{ asset('img/Visites/' ~ visite.pieceVisite) }}" target="_blank" class="btn btn-outline-secondary">Voir la pi√®ce actuelle</a>
                {% else %}
                    <span id="no-file-text" class="input-group-text">Aucun fichier choisi</span>
                {% endif %}
            </div>
        </div>
        {{ form_errors(form.pieceVisite) }}
    </div>
    {% endblock %}

    {# Bouton de soumission du formulaire #}
    <div style="position: absolute; bottom: 0; right: 0; top: 300px;">
        {{ form_widget(form.save, {'label': (mode == 'add' ? 'Ajouter' : 'Modifier')}) }}
        {{ form_widget(form.cancel, {'attr': {'class': 'btn btn-primary', 'onclick': 'resetFormFields()'}}) }}
    </div>
</div>

{{ form_end(form) }}

