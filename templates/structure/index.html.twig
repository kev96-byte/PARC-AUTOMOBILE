{% extends 'base.html.twig' %}
{# {% block body %}{% endblock %} #}
{% block mycontent %}
<div class="col-12 card-body">
    <div class="card" style="min-height: 475px;">
        <h5>Liste des structures</h5>
        <div class="p-toolbar p-component mb-4" role="toolbar">
            <div class="p-toolbar-group-left">
                <div class="my-2">
                    <a href="{{ path('structure.create') }}">
                        <button class="p-button p-component p-button-success mr-2">
                            <span class="p-button-icon p-c p-button-icon-left fa fa-plus"></span>
                            <span class="p-button-label p-c">Nouveau</span>
                            <span class="p-ink"></span>
                        </button>
                    </a>
                </div>
            </div>

        </div>
            <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Libellé structure</th>
                        <th>Type Structure</th>
                        <th>Institution</th>
                        <th>Téléphone</th>
                        <th>Responsable</th>
                        <th data-sortable="false" style="text-align: center;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for structure in structures %}
                    <tr>
                        <td>{{ structure.libelleStructure }}</td>
                        <td>{{ structure.TypeStructure.libelleTypeStructure}}</td>
                        <td>{{ structure.institution.libelleInstitution}}</td>
                        <td>{{ structure.telephoneStructure }}</td>
                        <td>HOUEFFA Yvette</td>
                        <td>
                            <div class="flex justify-content-end">
                                <a href="{{ path('structure.edit', {'id': structure.id}) }}">
                                    <button class="btn btn-sm btn-circle rounded-circle mr-2" style="color: white; background-color: #22C552;">
                                        <i class="fa fa-pen"></i>
                                    </button>
                                </a>

                                <form method="post" action="{{ path('structure.delete', {'id': structure.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette structure ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ structure.id) }}">
                                    <button class="btn btn-sm btn-circle rounded-circle mr-2" style="color: white; background-color: #f59e0B;">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

    </div>
        
</div>
{% endblock %}