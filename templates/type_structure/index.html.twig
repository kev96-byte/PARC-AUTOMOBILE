{% extends 'base.html.twig' %}
{# {% block body %}{% endblock %} #}
{% block mycontent %}
<div class="col-12 card-body">
    <div class="card" style="min-height: 475px;">
        <h5>Liste des types de structure</h5>
        <div class="p-toolbar p-component mb-4" role="toolbar">
            <div class="p-toolbar-group-left">
                <div class="my-2">
                    <a href="{{ path('TypeStructure.create') }}">
                        <button class="p-button p-component p-button-success mr-2">
                            <span class="p-button-icon p-c p-button-icon-left fa fa-plus"></span>
                            <span class="p-button-label p-c">Nouveau</span>
                            <span class="p-ink"></span>
                        </button>
                    </a>
                </div>
            </div>

        </div>
            <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Libellé</th>
                        <th data-sortable="false" style="padding-left: 15%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for type_structure in type_structures %}
                    <tr>
                        <td>{{ type_structure.libelleTypeStructure }}</td>
                        <td>
                            <div class="flex justify-content-end">
                                <a href="{{ path('TypeStructure.edit', {'id': type_structure.id}) }}">
                                    <button class="btn btn-sm btn-circle rounded-circle mr-2" style="color: white; background-color: #22C552;">
                                        <i class="fa fa-pen"></i>
                                    </button>
                                </a>

                                <form method="post" action="{{ path('TypeStructure.delete', {'id': type_structure.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette structure ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ type_structure.id) }}">
                                    <button class="btn btn-sm btn-circle rounded-circle mr-2" style="color: white; background-color: #f59e0B;">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>        
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

    </div>
        
</div>
{% endblock %}


